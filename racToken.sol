    ) internal  returns (uint256) {
        uint256 _feeAmount = amount.mul(feeRate).div(100);
        _balances[daoAddress] +=_feeAmount;
        emit  Transfer(sender, daoAddress, _feeAmount);
        return amount.sub(_feeAmount);
    }

